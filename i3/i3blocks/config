# Query my default IP address only on startup
[ip]
command=hostname -I | awk '{ print "IP:" $1 }'
interval=once
color=#91E78B

# Update time every 5 seconds
[psttime]
command=date +%Y-%m-%d\ %T%Z
interval=5

[utctime]
command=date -u +%H%Z
interval=5

[sydtime]
command=TZ="Australia/Sydney" date +%H%Z
interval=5

[zrhtime]
command=TZ="Europe/Zurich" date +%H%Z
interval=5
